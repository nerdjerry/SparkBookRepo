				"source": [
					"spark.sql(\"\"\"\r\n",
					"    SELECT *\r\n",
					"    FROM customer_purchases\r\n",
					"    ORDER BY `sum(total_cost)` DESC\r\n",
					"\"\"\")\\\r\n",
