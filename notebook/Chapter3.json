						}
					}
				},
				"source": [
					"staticDataFrame.createOrReplaceTempView(\"retail_data\")"
				],
				"execution_count": 10
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
