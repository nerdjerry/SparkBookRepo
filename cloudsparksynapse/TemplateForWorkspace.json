						"source": [
							"staticDataFrame = spark.read.format(\"csv\") \\\r\n",
							"                .option(\"header\",\"true\") \\\r\n",
							"                .option(\"inferSchema\", \"true\")\\\r\n",
							"                .load(\"abfss://sparkbook@cloudsparkstorage.dfs.core.windows.net/data/data/retail-data/by-day/*.csv\")"
						],
						"outputs": [],
